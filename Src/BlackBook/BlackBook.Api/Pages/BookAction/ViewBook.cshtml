@page
@using BlackBook.Api.Pages.BookAction
@model BlackBook.Api.Pages.BookAction.ViewBookModel
@{
    Layout = "/Pages/_Layout.cshtml";
}
<h1>Просмотр книги</h1>

@if (Model.BookFile != null)
{
    <div id="pdfViewer">
        <iframe src="~/books/@Model.BookFile.FileName#page=@Model.Book.UserBookProgress.LastReadPage" 
            style="position:absolute; top:0; left:0; width:100%; height:100%; border: none; overflow: hidden;" 
            allowfullscreen>
        </iframe>
    </div>
}
else
{
    <p>Книга не найдена.</p>
} 